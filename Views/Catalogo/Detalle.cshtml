@model Inmueble

@{
    ViewData["Title"] = "Detalle del Inmueble";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <!-- Mostrar la imagen del inmueble -->
        @if (!string.IsNullOrEmpty(Model.Imagen))
        {
            <img src="@Url.Content(Model.Imagen) class="img-fluid" alt="@Model.Titulo" />
        }
        else
        {
            <img src="https://via.placeholder.com/400x300" class="img-fluid" alt="Imagen no disponible" />
        }
    </div>
    <div class="col-md-6">
        <!-- Información del inmueble -->
        <h2>@Model.Titulo</h2>
        <p><strong>Código:</strong> @Model.Codigo</p>
        <p><strong>Tipo:</strong> @Model.Tipo</p>
        <p><strong>Ciudad:</strong> @Model.Ciudad</p>
        <p><strong>Dirección:</strong> @Model.Direccion</p>
        <p><strong>Dormitorios:</strong> @Model.Dormitorios</p>
        <p><strong>Baños:</strong> @Model.Banos</p>
        <p><strong>Metros Cuadrados:</strong> @Model.MetrosCuadrados</p>
        <p><strong>Precio:</strong> @Model.Precio.ToString("C")</p>
        <p><strong>Activo:</strong> @(Model.Activo ? "Sí" : "No")</p>
    </div>
</div>

<!-- Botón para regresar al catálogo -->
<a href="@Url.Action("Index", "Catalogo")" class="btn btn-secondary mt-4">Regresar al Catálogo</a>

<!-- Botón para agendar una visita -->
<form asp-action="AgendarVisita" method="post" class="mt-3">
    <input type="hidden" name="inmuebleId" value="@Model.Id" />
    <button type="submit" class="btn btn-success">Agendar Visita</button>
</form>
