@model InmuebleVisitaViewModel

@{
    ViewData["Title"] = "Detalle del Inmueble";
}

@if (Model.Inmueble == null || Model.Inmueble == null)
{
    <div class="alert alert-danger">Error: El inmueble no está disponible.</div>
    return;
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <!-- Mostrar la imagen del inmueble -->
        @if (!string.IsNullOrEmpty(Model.Inmueble.Imagen))
        {
            <img src="@Url.Content(Model.Inmueble.Imagen)" class="img-fluid" alt="@Model.Inmueble.Titulo" />
        }
        else
        {
            <img src="https://via.placeholder.com/400x300" class="img-fluid" alt="Imagen no disponible" />
        }
    </div>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    }
    <div class="col-md-6">
        <h2>@Model.Inmueble.Titulo</h2>
        <p><strong>Código:</strong> @Model.Inmueble.Codigo</p>
        <p><strong>Tipo:</strong> @Model.Inmueble.Tipo</p>
        <p><strong>Ciudad:</strong> @Model.Inmueble.Ciudad</p>
        <p><strong>Dirección:</strong> @Model.Inmueble.Direccion</p>
        <p><strong>Dormitorios:</strong> @Model.Inmueble.Dormitorios</p>
        <p><strong>Baños:</strong> @Model.Inmueble.Banos</p>
        <p><strong>Metros Cuadrados:</strong> @Model.Inmueble.MetrosCuadrados</p>
        <p><strong>Precio:</strong> @Model.Inmueble.Precio.ToString("C")</p>
        <p><strong>Activo:</strong> @(Model.Inmueble.Activo ? "Sí" : "No")</p>
    </div>
    <div class="col-md-12 mt-4">
        <h3>AGENDAR VISITA</h3>
    
        <form method="post" asp-action="AgendarVisita">
            <div class="form-group my-3">
                <label for="fechaInicio">Fecha de Inicio</label>
                <input type="datetime-local" name="fechaInicio" id="fechaInicio" class="form-control w-25" required />
            </div>
            <div class="form-group my-3">
                <label for="fechaFin">Fecha de Fin</label>
                <input type="datetime-local" name="fechaFin" id="fechaFin" class="form-control w-25 " />
            </div>
            <div class="form-group w-50 my-3">
                <label for="notas">Notas</label>
                <textarea name="notas" id="notas" class="form-control"></textarea>
            </div>
            <input type="hidden" name="inmuebleId" value="@Model.Inmueble.Id" />
            <button type="submit" class="btn btn-primary">Agendar Visita</button>
        </form>

    </div>
</div>

@if (Model.Inmueble != null)
{
    <hr />
    <h3>Reservar Inmueble</h3>
    @if (!Model.Inmueble.ReservaActiva)
    {
        <form method="post" asp-action="Reservar">
            <input type="hidden" name="inmuebleId" value="@Model.Inmueble.Id" />
            <button type="submit" class="btn btn-success">Reservar Ahora</button>
        </form>
    }
    else
    {
        <p>Este inmueble ya tiene una reserva activa. No se puede realizar una nueva reserva.</p>
    }
}